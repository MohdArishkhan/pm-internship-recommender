generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    id        Int      @id @default(autoincrement())
    name      String
    email     String   @unique
    password  String // Remember to hash this in production
    education String
    skills    String // Comma-separated skills
    location  String
    sector    String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("users") // Optional: maps to "users" table instead of "User"
}

model Internship {
    id           Int      @id @default(autoincrement())
    title        String
    description  String   @db.Text // For longer descriptions
    requirements String[] // For longer requirements (comma-separated)
    location     String
    sector       String
    createdAt    DateTime @default(now())

    @@map("internships") // Optional: maps to "internships" table
}

